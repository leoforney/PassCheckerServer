<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <filter>
        <filter-name>SparkFilter</filter-name>
        <filter-class>tk.leoforney.passcheckerserver.SpringifiedSparkFilter</filter-class>
        <init-param>
            <param-name>applicationClass</param-name>
            <param-value>tk.leoforney.passcheckerserver.Runner</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SparkFilter</filter-name>
        <url-pattern>/spark/*</url-pattern>
    </filter-mapping>
</web-app>